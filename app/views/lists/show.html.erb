<section class="todoapp">
			<header class="header">
				<h1><%= @list.name %></h1>
				<!-- <input class="new-todo" placeholder="Add an item..." autofocus=""> -->
				<%= form_for @item, :url => list_items_path(@list) do |f| %>
					<%= f.text_field :description,  :class => 'new-todo', :placeholder => @item.errors[:description][0] || 'Insert new items...' %>
					<%= f.submit :style => "display: none" %>
				<% end %>
			</header>
			<section class="main">
				<ul class="todo-list">
					<% @list.items.each do |item| %>
          <li class= "<%= 'completed' if item.complete? %>">
            <% if !item.id.nil? %>
							<div class="view">
								<%= form_for([@list, item]) do |f| %>
									<%= f.check_box :status, :class=>"toggle", :checked=>(true if item.complete?) %>
								<% end %>
								<label for=""><%= item.description %></label>
							</div>
						<% end %>
          </li>
					<% end %>
        </ul>
			</section>
			<footer class="footer" >
			</footer>
		</section>
