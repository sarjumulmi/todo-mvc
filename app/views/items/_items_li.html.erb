
<%= li_for_item(item) do %>
  <% if !item.id.nil? %>
    <div class="view">
      <%= form_for_item_status(item) %>
      <label for=""><%= item.description %></label>
      <%= button_to "x", list_item_path(item.list, item), :method => :delete, :class => "destroy", :style=>"border:none; background-color: white" %>
    </div>
  <% end %>
<% end %>
